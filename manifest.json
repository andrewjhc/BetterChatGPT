{
  "manifest_version": 3,
  "name": "ChatGPT Enhancer",
  "description": "Enhance your ChatGPT experience with features like file uploads, save prompts, and more.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "fileSystem",
    "downloads",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
"browser_action": {
  "default_popup": "popup.html",
  "default_icon": "icons/icon-48.png"
}
"commands": {
  "open-popup": {
    "suggested_key": {
      "default": "Ctrl+Shift+P"
    },
    "description": "Open the extension popup"
  }
}
