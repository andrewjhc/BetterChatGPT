{
  "manifest_version": 3,
  "name": "ChatGPT Enhancer",
  "description": "Enhance your ChatGPT experience with features like saving prompts, pinning chats, text-to-speech, file upload support, and more.",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "commands",
    "tabs",
    "fileSystem"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Open the extension popup"
    }
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "file_handlers": {
    "open-docx": {
      "action": {
        "default_popup": "file-uploads/open-docx.html"
      }
    },
    "open-pdf": {
      "action": {
        "default_popup": "file-uploads/open-pdf.html"
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"]
    }
  ]
}
